{
  "name": "pxn-cli",
  "version": "1.2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:wolframdeus/pxn-cli.git",
  "author": "Vladislav Kibenko <wolfram.deus@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wolframdeus/pxn-cli",
  "bugs": "https://github.com/wolframdeus/pxn-cli/issues",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "pxn-cli": "./dist/index.js"
  },
  "scripts": {
    "build": "gulp",
    "test": "tsc --noEmit",
    "lint": "eslint src/**",
    "validate": "npm-run-all test lint",
    "commit": "git-cz",
    "release": "standard-version -a",
    "postrelease": "npm-run-all release:*",
    "release:tags": "git push --follow-tags origin master & yarn publish --non-interactive",
    "release:github": "dotenv -e .env -- conventional-github-releaser -p eslint",
    "prepublishOnly": "yarn build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/commander": "^2.12.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.3",
    "conventional-github-releaser": "^3.1.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.24.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-minify": "^3.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.2.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "commander": "^7.2.0",
    "pxn-core": "^1.1.0"
  }
}
